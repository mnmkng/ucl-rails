<h1>Teachers</h1>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.email %></td>
        <td>
          <%= link_to teacher, class: 'btn btn-primary' do %>
              <%= fa_icon 'info-circle', text: 'Show' %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', teacher, class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to new_teacher_path, class: 'btn btn-primary' do %>
    <%= fa_icon 'plus', text: 'New Teacher' %>
<% end %>
