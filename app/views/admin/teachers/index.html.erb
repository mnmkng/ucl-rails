<ol class="breadcrumb bg-transparent">
  <li class="breadcrumb-item"><%= link_to 'Dashboard', admin_dashboard_path %></li>
  <li class="breadcrumb-item active">Správa lektorů</li>
</ol>

<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">Správa lektorů</h1>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Jméno</th>
    <th>Příjmení</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.email %></td>
        <td>
          <%= link_to admin_teacher_path(teacher), class: 'btn btn-primary' do %>
              <%= fa_icon 'info-circle', text: 'Zobraz detail' %>
          <% end %>
        </td>
        <td><%= link_to 'Uprav', edit_admin_teacher_path(teacher), class: 'btn btn-info' %></td>
        <td><%= link_to 'Smaž', admin_teacher_path(teacher), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to new_admin_teacher_path, class: 'btn btn-primary' do %>
    <%= fa_icon 'plus', text: 'Nový lektor' %>
<% end %>
