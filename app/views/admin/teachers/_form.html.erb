<%= simple_form_for([:admin, @teacher]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
    </div>

    <div class="form-inputs">
      <h3>Courses:</h3>
      <%= f.association(
              :courses,
              as: :check_boxes,
              label_html: {class: 'd-none'},
              include_hidden: false
          ) %>
    </div>

    <div class="form-actions">
      <%= f.button :magic_submit, cancel: admin_teachers_path %>
    </div>
<% end %>
