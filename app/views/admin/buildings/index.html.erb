<ol class="breadcrumb bg-transparent">
  <li class="breadcrumb-item"><%= link_to 'Dashboard', admin_dashboard_path %></li>
  <li class="breadcrumb-item active">Správa budov</li>
</ol>

<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">Správa budov</h1>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Název</th>
    <th>Kód</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @buildings.each do |building| %>
      <tr>
        <td><%= building.title %></td>
        <td><%= building.code %></td>
        <td>
          <%= link_to admin_building_path(building), class: 'btn btn-primary' do %>
              <%= fa_icon 'info-circle', text: 'Zobraz detail' %>
          <% end %>
        </td>
        <td><%= link_to 'Uprav', edit_admin_building_path(building), class: 'btn btn-info' %></td>
        <td><%= link_to 'Smaž', admin_building_path(building), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to new_admin_building_path, class: 'btn btn-primary' do %>
    <%= fa_icon 'plus', text: 'Nová budova' %>
<% end %>
