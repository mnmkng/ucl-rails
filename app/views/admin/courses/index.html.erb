<ol class="breadcrumb bg-transparent">
  <li class="breadcrumb-item"><%= link_to 'Dashboard', admin_dashboard_path %></li>
  <li class="breadcrumb-item active">Správa předmětů</li>
</ol>

<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">Správa předmětů</h1>
  </div>
</div>

<% if @courses.empty? %>
    <h2>Žádné předměty nebyly nalezeny.</h2>
<% else %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Název</th>
        <th>Kód</th>
        <th>Forma studia</th>
        <th>Jazyk</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @courses.each do |course| %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.code %></td>
            <td><%= course.study_type %></td>
            <td><%= course.language %></td>
            <td>
              <%= link_to admin_course_path(course), class: 'btn btn-primary' do %>
                  <%= fa_icon 'info-circle', text: 'Zobraz detail' %>
              <% end %>
            </td>
            <td><%= link_to 'Uprav', edit_admin_course_path(course), class: 'btn btn-info' %></td>
            <td><%= link_to 'Smaž', admin_course_path(course), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

<br>

<%= link_to new_admin_course_path, class: 'btn btn-primary' do %>
    <%= fa_icon 'plus', text: 'Nový předmět' %>
<% end %>
