<h1>Předměty</h1>

<% if @courses.empty? %>
    <h2>Žádné předměty nebyly nalezeny.</h2>
<% else %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Title</th>
        <th>Code</th>
        <th>Study Type</th>
        <th>Language</th>
      </tr>
      </thead>

      <tbody>
      <% @courses.each do |course| %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.code %></td>
            <td><%= course.study_type %></td>
            <td><%= course.language %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>



