<h1>Rooms</h1>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Title</th>
    <th>Code</th>
    <th>Building</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.code %></td>
        <td><%= room.building.title %></td>
        <td>
          <%= link_to room, class: 'btn btn-primary' do %>
              <%= fa_icon 'info-circle', text: 'Show' %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_room_path(room), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', room, class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to new_room_path, class: 'btn btn-primary' do %>
    <%= fa_icon 'plus', text: 'New Room' %>
<% end %>
