<ol class="breadcrumb bg-transparent">
  <li class="breadcrumb-item"><%= link_to 'Seznam budov', buildings_path %></li>
  <li class="breadcrumb-item"><%= link_to @room.building.title, building_path(@room.building) %></li>
  <li class="breadcrumb-item active"><%= @room.title %></li>
</ol>

<div class="jumbotron">
  <h1><%= @room.title %></h1>
  <p><%= @room.code %></p>
</div>

  <% timetable = @room.generate_timetable %>
  <% if timetable.empty? %>
    <h2>V této místnosti neprobíhají žádné lekce.</h2>
  <% else %>
    <table class="table table-bordered table-hover table-responsive">
      <thead>
      <tr>
        <th>Datum</th>
        <th>8:00</th>
        <th>8:15</th>
        <th>8:30</th>
        <th>8:45</th>
        <th>9:00</th>
        <th>9:15</th>
        <th>9:30</th>
        <th>9:45</th>
        <th>10:00</th>
        <th>10:15</th>
        <th>10:30</th>
        <th>10:45</th>
        <th>11:00</th>
        <th>11:15</th>
        <th>11:30</th>
        <th>11:45</th>
        <th>12:00</th>
        <th>12:15</th>
        <th>12:30</th>
        <th>12:45</th>
        <th>13:00</th>
        <th>13:15</th>
        <th>13:30</th>
        <th>13:45</th>
        <th>14:00</th>
        <th>14:15</th>
        <th>14:30</th>
        <th>14:45</th>
        <th>15:00</th>
        <th>15:15</th>
        <th>15:30</th>
        <th>15:45</th>
        <th>16:00</th>
        <th>16:15</th>
        <th>16:30</th>
        <th>16:45</th>
        <th>17:00</th>
        <th>17:15</th>
        <th>17:30</th>
        <th>17:45</th>
      </tr>
      </thead>
      <tbody>
      <% timetable.each do |day, schedule| %>
          <tr>
            <td><%= Lesson.day(day) %></td>
            <%= schedule.to_html_row %>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>